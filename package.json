{
  "name": "postbee-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "npm run auth:migrate:deploy && next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "format": "prettier --write .",
    "db:up": "docker compose up -d postgres && until docker exec postbee-app-postgres-1 pg_isready -U postgres; do sleep 1; done",
    "db:down": "docker compose down",
    "auth:migrate:local": "npm run db:up && npx @better-auth/cli migrate --config src/lib/auth.ts",
    "auth:generate:local": "npm run db:up && npx @better-auth/cli generate --config src/lib/auth.ts",
    "auth:migrate:deploy": "npx @better-auth/cli migrate -y --config src/lib/auth.ts",
    "api:generate": "openapi-ts"
  },
  "dependencies": {
    "@postbee/postbee-ui-lib": "^1.27.0",
    "@types/better-sqlite3": "7.6.13",
    "better-auth": "1.3.34",
    "clsx": "^2.1.1",
    "next": "16.0.5",
    "pg": "^8.16.3",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@hey-api/openapi-ts": "^0.88.0",
    "@smartive/eslint-config": "7.0.0",
    "@smartive/prettier-config": "3.1.2",
    "@tailwindcss/postcss": "^4",
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "@types/node": "^22",
    "@types/pg": "^8.15.6",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "dotenv": "^17.2.3",
    "eslint": "9.22.0",
    "eslint-config-next": "16.0.5",
    "knip": "5.69.1",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "0.7.1",
    "tailwindcss": "^4",
    "typescript": "^5",
    "typescript-eslint": "^8.47.0"
  }
}
